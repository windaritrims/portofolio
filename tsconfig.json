{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Ganti dari 'bundler' ke 'node' supaya resolver lebih kompatibel
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Ganti dari 'preserve' ke 'react-jsx' supaya NextJS dan TS lebih kompatibel
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "global.d.ts", // Pastikan file ini ada di root project
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
